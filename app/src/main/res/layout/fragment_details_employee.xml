<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DetailsEmployeeFragment"
    android:backgroundTint="@color/white"
    android:background="@color/white"
    android:clickable="true"
    >


    <ImageView
        android:id="@+id/filling"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/department_details_item"
        android:layout_marginBottom="-20dp"
        android:background="@color/grey"
        />
    <ImageView
        android:id="@+id/icon_back"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        />

    <ImageView
        android:id="@+id/avatar_details_item"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_baseline_avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/icon_back" />

    <TextView
        android:id="@+id/userName_details_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/avatar_details_item"
        app:layout_constraintStart_toStartOf="@+id/avatar_details_item"
        app:layout_constraintTop_toBottomOf="@+id/avatar_details_item"
        tools:text="Anna Fith" />



    <TextView
        android:id="@+id/department_details_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:padding="5dp"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/userName_details_item"
        app:layout_constraintStart_toStartOf="@+id/userName_details_item"
        app:layout_constraintTop_toBottomOf="@+id/userName_details_item"
        tools:text="designer" />
    <TextView
        android:id="@+id/userTag_details_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/userName_details_item"
        app:layout_constraintBottom_toBottomOf="@id/userName_details_item"
        app:layout_constraintTop_toTopOf="@id/userName_details_item"
        tools:text="gt"

        />

    <TextView
        android:id="@+id/birthday_details_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:padding="5dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_goneMarginEnd="20dp"
        app:layout_constraintStart_toEndOf="@id/icon_star"
        app:layout_constraintTop_toBottomOf="@id/filling"
        tools:text="25 сентября 2004"

        />
    <TextView
        android:id="@+id/age_details_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:padding="5dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_goneMarginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filling"
        tools:text="20 лет"
        android:visibility="gone"
        tools:visibility = "visible"
        />

    <ImageView
        android:id="@+id/icon_star"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_baseline_star_outline_24"
        app:layout_constraintTop_toBottomOf="@id/filling"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        />
    <ImageView
        android:id="@+id/icon_phone"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_baseline_phone_24"
        app:layout_constraintTop_toBottomOf="@id/icon_star"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/phoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:padding="5dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_goneMarginEnd="20dp"
        app:layout_constraintStart_toEndOf="@id/icon_phone"
        app:layout_constraintTop_toTopOf="@id/icon_phone"
        tools:text="8 900 545 80 20"
        />




</androidx.constraintlayout.widget.ConstraintLayout>