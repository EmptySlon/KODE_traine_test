<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/error_window"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    >

    <ImageView
        android:id="@+id/img_err"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/error_msg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:id="@+id/err_tx_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/er_msg_1"
        app:layout_constraintTop_toBottomOf="@id/img_err"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/err_tx_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/err_tx_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:text="@string/err_msg_2"
        />
    <TextView
        android:id="@+id/err_tx_rebut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/err_tx_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/err_msg_3"
        android:textColor="@color/purple_700"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:textSize="16dp"



        />

</androidx.constraintlayout.widget.ConstraintLayout>